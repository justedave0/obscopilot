{
  "name": "Scene Switch Command",
  "description": "Switch to a specific scene when a mod types !scene [scene name]",
  "version": "1.0.0",
  "enabled": true,
  "triggers": [
    {
      "name": "Scene Command",
      "type": "TWITCH_CHAT_MESSAGE",
      "enabled": true,
      "config": {
        "pattern": "!scene",
        "requires_mod": true
      }
    }
  ],
  "actions": [
    {
      "name": "Switch Scene",
      "type": "OBS_SWITCH_SCENE",
      "enabled": true,
      "config": {
        "scene_name": "{message_args[0]}"
      }
    },
    {
      "name": "Send Confirmation",
      "type": "TWITCH_SEND_CHAT_MESSAGE",
      "enabled": true,
      "config": {
        "message": "Switched to scene: {message_args[0]}"
      }
    }
  ]
} 