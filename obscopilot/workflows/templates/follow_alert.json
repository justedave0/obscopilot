{
  "name": "Follow Alert",
  "description": "Show an alert and play a sound when someone follows the channel",
  "version": "1.0.0",
  "enabled": true,
  "triggers": [
    {
      "name": "New Follow",
      "type": "TWITCH_FOLLOW",
      "enabled": true,
      "config": {}
    }
  ],
  "actions": [
    {
      "name": "Show Alert",
      "type": "OBS_SET_SOURCE_VISIBILITY",
      "enabled": true,
      "config": {
        "source_name": "FollowAlert",
        "visible": true,
        "scene_name": ""
      }
    },
    {
      "name": "Play Sound",
      "type": "PLAY_SOUND",
      "enabled": true,
      "config": {
        "file_path": "sounds/follow.mp3",
        "volume": 75
      }
    },
    {
      "name": "Send Chat Message",
      "type": "TWITCH_SEND_CHAT_MESSAGE",
      "enabled": true,
      "config": {
        "message": "Thanks for the follow, {user}!"
      }
    },
    {
      "name": "Wait",
      "type": "DELAY",
      "enabled": true,
      "config": {
        "seconds": 5
      }
    },
    {
      "name": "Hide Alert",
      "type": "OBS_SET_SOURCE_VISIBILITY",
      "enabled": true,
      "config": {
        "source_name": "FollowAlert",
        "visible": false,
        "scene_name": ""
      }
    }
  ]
} 