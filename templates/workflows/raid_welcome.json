{
  "id": "raid_welcome_template",
  "name": "Raid Welcome Sequence",
  "description": "Special welcome sequence when your channel gets raided",
  "version": "1.0.0",
  "enabled": true,
  "data": {
    "triggers": [
      {
        "id": "raid_trigger",
        "name": "Channel Raid Event",
        "type": "TWITCH_RAID",
        "config": {
          "min_viewers": 1
        }
      }
    ],
    "actions": [
      {
        "id": "switch_scene",
        "name": "Switch to Welcome Scene",
        "type": "OBS_SET_SCENE",
        "config": {
          "scene_name": "Raid Welcome"
        }
      },
      {
        "id": "play_sound",
        "name": "Play Raid Sound",
        "type": "PLAY_SOUND",
        "config": {
          "file_path": "assets/sounds/raid_alert.wav",
          "volume": 1.0
        }
      },
      {
        "id": "set_raid_text",
        "name": "Set Raid Info Text",
        "type": "OBS_SET_TEXT",
        "config": {
          "source_name": "RaidWelcomeText",
          "text": "Welcome {{ event.raider_name }}'s community! Thanks for the raid with {{ event.viewer_count }} viewers!"
        }
      },
      {
        "id": "chat_message",
        "name": "Send Welcome Message",
        "type": "TWITCH_CHAT_MESSAGE",
        "config": {
          "message": "A huge welcome to @{{ event.raider_name }} and their community! Thank you so much for the raid with {{ event.viewer_count }} viewers!"
        }
      },
      {
        "id": "ai_shoutout",
        "name": "Generate AI Shoutout",
        "type": "AI_GENERATE_TEXT",
        "config": {
          "prompt": "Generate a warm, enthusiastic welcome message for streamer {{ event.raider_name }} who just raided the channel with {{ event.viewer_count }} viewers. Include a call to action for viewers to check out their channel.",
          "max_tokens": 150
        }
      },
      {
        "id": "send_ai_shoutout",
        "name": "Send AI Shoutout",
        "type": "TWITCH_CHAT_MESSAGE",
        "config": {
          "message": "{{ ai_shoutout.text }}"
        }
      },
      {
        "id": "delay",
        "name": "Display Duration",
        "type": "DELAY",
        "config": {
          "duration": 10000
        }
      },
      {
        "id": "return_to_scene",
        "name": "Return to Previous Scene",
        "type": "OBS_SET_SCENE",
        "config": {
          "scene_name": "{{ previous_scene }}"
        }
      }
    ]
  }
} 