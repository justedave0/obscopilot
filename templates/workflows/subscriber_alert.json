{
  "id": "subscription_alert_template",
  "name": "Subscription Alert",
  "description": "Displays an alert on screen when someone subscribes to your channel",
  "version": "1.0.0",
  "enabled": true,
  "data": {
    "triggers": [
      {
        "id": "new_sub_trigger",
        "name": "New Subscription Event",
        "type": "TWITCH_SUBSCRIPTION",
        "config": {}
      }
    ],
    "actions": [
      {
        "id": "show_alert_source",
        "name": "Show Alert Source",
        "type": "OBS_SET_SOURCE_VISIBILITY",
        "config": {
          "source_name": "SubscriptionAlert",
          "visible": true,
          "scene_name": "{{ current_scene }}"
        }
      },
      {
        "id": "play_sound",
        "name": "Play Alert Sound",
        "type": "PLAY_SOUND",
        "config": {
          "file_path": "assets/sounds/subscription_alert.wav",
          "volume": 0.8
        }
      },
      {
        "id": "set_text",
        "name": "Set Alert Text",
        "type": "OBS_SET_TEXT",
        "config": {
          "source_name": "SubscriptionAlertText",
          "text": "{{ event.user_name }} just subscribed{% if event.is_gift %} (Gift from {{ event.gifter_name }}){% endif %}{% if event.tier == 'prime' %} with Prime{% endif %}{% if event.months > 1 %} for {{ event.months }} months{% endif %}!"
        }
      },
      {
        "id": "chat_message",
        "name": "Send Thank You Message",
        "type": "TWITCH_CHAT_MESSAGE",
        "config": {
          "message": "Thank you for the subscription, {{ event.user_name }}! Welcome to the community!"
        }
      },
      {
        "id": "delay",
        "name": "Display Duration",
        "type": "DELAY",
        "config": {
          "duration": 7000
        }
      },
      {
        "id": "hide_alert_source",
        "name": "Hide Alert Source",
        "type": "OBS_SET_SOURCE_VISIBILITY",
        "config": {
          "source_name": "SubscriptionAlert",
          "visible": false,
          "scene_name": "{{ current_scene }}"
        }
      }
    ]
  }
} 