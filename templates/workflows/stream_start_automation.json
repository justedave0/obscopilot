{
  "id": "stream_start_automation_template",
  "name": "Stream Start Automation",
  "description": "Automates actions when you start streaming",
  "version": "1.0.0",
  "enabled": true,
  "data": {
    "triggers": [
      {
        "id": "stream_start_trigger",
        "name": "Stream Start Event",
        "type": "OBS_STREAM_STARTED",
        "config": {}
      }
    ],
    "actions": [
      {
        "id": "switch_scene",
        "name": "Switch to Starting Scene",
        "type": "OBS_SET_SCENE",
        "config": {
          "scene_name": "Stream Starting"
        }
      },
      {
        "id": "play_intro_music",
        "name": "Play Intro Music",
        "type": "PLAY_SOUND",
        "config": {
          "file_path": "assets/sounds/stream_intro.mp3",
          "volume": 0.5
        }
      },
      {
        "id": "send_chat_message",
        "name": "Send Welcome Message",
        "type": "TWITCH_CHAT_MESSAGE",
        "config": {
          "message": "Stream is starting! Welcome everyone!"
        }
      },
      {
        "id": "send_social_notification",
        "name": "Send Twitter Notification",
        "type": "EXTERNAL_API_CALL",
        "config": {
          "url": "https://example.com/tweet-api", 
          "method": "POST",
          "headers": {
            "Content-Type": "application/json",
            "Authorization": "Bearer {{ twitter_api_token }}"
          },
          "body": {
            "text": "I'm now live on Twitch! Come hang out at https://twitch.tv/{{ channel_name }} #streaming #twitch"
          }
        }
      },
      {
        "id": "delay",
        "name": "Intro Duration",
        "type": "DELAY",
        "config": {
          "duration": 30000
        }
      },
      {
        "id": "switch_to_main",
        "name": "Switch to Main Scene",
        "type": "OBS_SET_SCENE",
        "config": {
          "scene_name": "Main"
        }
      },
      {
        "id": "send_start_message",
        "name": "Send Stream Start Message",
        "type": "TWITCH_CHAT_MESSAGE",
        "config": {
          "message": "And we're live! Today we're playing {{ game_name }}. Thanks for joining!"
        }
      }
    ]
  }
} 