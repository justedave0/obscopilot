{
  "id": "follower_alert_template",
  "name": "New Follower Alert",
  "description": "Displays an alert on screen when someone follows your channel",
  "version": "1.0.0",
  "enabled": true,
  "data": {
    "triggers": [
      {
        "id": "new_follower_trigger",
        "name": "New Follower Event",
        "type": "TWITCH_FOLLOW",
        "config": {}
      }
    ],
    "actions": [
      {
        "id": "show_alert_source",
        "name": "Show Alert Source",
        "type": "OBS_SET_SOURCE_VISIBILITY",
        "config": {
          "source_name": "FollowerAlert",
          "visible": true,
          "scene_name": "{{ current_scene }}"
        }
      },
      {
        "id": "play_sound",
        "name": "Play Alert Sound",
        "type": "PLAY_SOUND",
        "config": {
          "file_path": "assets/sounds/follower_alert.wav",
          "volume": 0.75
        }
      },
      {
        "id": "set_text",
        "name": "Set Alert Text",
        "type": "OBS_SET_TEXT",
        "config": {
          "source_name": "FollowerAlertText",
          "text": "Thanks for the follow, {{ event.user_name }}!"
        }
      },
      {
        "id": "delay",
        "name": "Display Duration",
        "type": "DELAY",
        "config": {
          "duration": 5000
        }
      },
      {
        "id": "hide_alert_source",
        "name": "Hide Alert Source",
        "type": "OBS_SET_SOURCE_VISIBILITY",
        "config": {
          "source_name": "FollowerAlert",
          "visible": false,
          "scene_name": "{{ current_scene }}"
        }
      }
    ]
  }
} 